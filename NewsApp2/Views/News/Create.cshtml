@model News

@{
    ViewData["Title"] = ViewContext.RouteData.Values["controller"]?.ToString()
    + "-" + ViewContext.RouteData.Values["action"]?.ToString();
}

<div class="container">
    <h4>
        <b>@ViewContext.RouteData.Values["controller"]?.ToString()</b>
        - @ViewContext.RouteData.Values["action"]?.ToString()
    </h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">

                @if (ViewBag.Message != null)
                {
                    <h5 class="alert alert-danger">@ViewBag.Message</h5>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Details" class="control-label"></label>
                    <textarea asp-for="Details" name="Details" rows="5" cols="5" class="form-control"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="SectionId" class="control-label"></label>
                    <select asp-for="SectionId" class="form-control" asp-items="ViewBag.Sections">
                        <option value="" disabled selected>---------Select Section---------</option>
                    </select>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                </div>
                <!-----------------------------Image-------------------------------------------------------------------->
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input type="file" id="input1" asp-for="Image" onchange="UploadImageFile(this,'img1','isImg1');" class="form-control custom-file-input" />
                    <input type="hidden" name="isImg1" id="isImg1" value="..." />
                </div>

                <div class="form-group">
                    <button type="button" class="btn-close" aria-label="Close" onclick="return clearFile('input1','img1','isImg1');"></button>
                    <img id="img1" src="~/img/news.jpg" onclick="return clickFile('input1');" style="width:100%;height:300px" class="img-thumbnail" />
                </div>
                <!-----------------------------switch-------------------------------------------------------------------->

                <div class="alert alert-success bg-success-subtle ps-4 pe-4" role="alert" style="width:max-content;">
                    <div class="form-check form-switch">
                        <input asp-for="State" class="form-check-input me-3" type="checkbox" id="State" checked>
                        <label asp-for="State" class="form-check-label" for="State"></label>
                    </div>
                </div>
                @* <input type="hidden" asp-for="Created" /> *@

                <div class="form-group mt-5">
                    <input type="submit" value="Create" class="btn btn-primary ps-5 pe-5 me-3" />
                    <a asp-action="Index" class="btn btn-outline-primary  ps-4 pe-4 me-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/inputfileimage.js"></script>
    <script src="~/js/stateswitch.js"></script>
}
