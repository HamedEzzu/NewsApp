@model List<Section>
<style>

    .btn-white:hover {
        background-color: #EEF3F3;
        color: #64A19D;
    }

</style>
<form method="post">
    <h4>
        <b>@ViewContext.RouteData.Values["controller"]?.ToString()</b>
        - @ViewBag.Section
    </h4>
    <div style="overflow-x: auto;">
        <div class="btn-group  p-0 w-100" role="group">

            <button type="submit" class="btn btn-white" asp-controller="News" asp-action="Index">
                All news
                <span class="badge text-bg-light text-secondary fs-6 border-0" style="margin-left:10px;padding:10px;">
                    @ViewBag.AllNewsCount
                </span>
            </button>

            @{
                if (Model.Count != 0)
                {
                    foreach (var item in Model)
                    {
                        <button type="submit" asp-controller="News" asp-action="DisplaySectionNews" asp-route-sectionId="@item.Id" class="btn btn-white">
                            @item.Name

                            <span class="badge text-bg-light text-secondary fs-6" style="margin-left:10px;padding:10px;">
                                @item.SectionNewsCount
                            </span>
                        </button>
                    }
                }
            }
        </div>
    </div>
</form>