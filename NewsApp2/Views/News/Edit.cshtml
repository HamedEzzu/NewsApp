@model News

@{
    ViewData["Title"] = ViewContext.RouteData.Values["controller"]?.ToString()
    + "-" + ViewContext.RouteData.Values["action"]?.ToString();
}

<div class="container">
    <h4>
        <b>@ViewContext.RouteData.Values["controller"]?.ToString()</b>
        - @ViewContext.RouteData.Values["action"]?.ToString()
    </h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details" class="control-label"></label>
                    <textarea rows="5" cols="5" asp-for="Details" class="form-control" name="Details"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SectionId" class="control-label"></label>
                    @* <label asp-for="SectionId" class="control-label">Sections</label> *@
                    <select asp-for="SectionId" class="form-control" asp-items="ViewBag.Sections">
                        @* <option value="">---------Select Section---------</option> *@
                    </select>
                    <span asp-validation-for="SectionId" class="text-danger"></span>
                </div>

                <!-------------------------------------File&Image------------------------------------------------------>
                <div class="form-group">
                    <label class="control-label">News Picture</label>
                    <input id="input1" type="file" asp-for="Image" onchange="UploadImageFile(this,'img1','isImg1');" class="form-control custom-file-input" />
                    <input type="hidden" name="isImg1" id="isImg1" value="..." />
                </div>

                <div class="form-group">
                    <button type="button" class="btn-close" aria-label="Close" onclick="return clearFile('input1','img1','isImg1');"></button>
                    @if (Model.ImageUrl != null)
                    {
                        <img id="img1" src="~/pictures/news/@Model.ImageUrl" onclick="return clickFile('input1');" style="width:100%;height:300px" class="img-thumbnail" />
                        <input type="hidden" asp-for="@Model.ImageUrl" />
                    }
                    else
                    {
                        <img id="img1" src="~/img/News.jpg" onclick="return clickFile('input1');" style="width:100%;height:300px" class="img-thumbnail" />
                        <P id="defaultText">the default Picture</P>
                    }
                </div>
                <!------------------------------------------------------------------------------->
                <div class="alert alert-info" role="alert" style="width:max-content;">
                    <p>
                        <b>@Html.DisplayNameFor(model => model.Created):</b>
                        @Html.DisplayFor(model => model.Created)
                        @Html.HiddenFor(model => model.Created)
                    </p>
                    <p>
                        <b>@Html.DisplayNameFor(model => model.Modified):</b>
                        @Html.DisplayFor(model => model.Modified)
                    </p>
                </div>
                <!---------------------------switch---------------------------------------------->
                @if (Model.State == true)
                {
                    <div class="alert alert-success  ps-4 pe-4" role="alert" style="width:max-content;">
                        <div class="form-check form-switch">
                            <input asp-for="State" class="form-check-input me-3" type="checkbox" id="State">
                            <label asp-for="State" class="form-check-label" for="State"></label>
                            @* <input name="State" type="hidden" value="false" /> *@
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger  ps-4 pe-4" role="alert" style="width:max-content;">
                        <div class="form-check form-switch">
                            <input asp-for="State" class="form-check-input me-3" type="checkbox" id="State">
                            <label asp-for="State" class="form-check-label" for="State"></label>
                        </div>
                    </div>
                }
                <!-- Modal -->
                <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="DeleteModalLabel">Delete Item</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this?
                            </div>
                            <div class="modal-footer">
                                <button type="button" value="Delete" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                                @* <button  class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</button> *@
                                <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" value="Delete" class="btn btn-danger">
                            </div>
                        </div>
                    </div>
                </div>
                <!--------------------------------------------------------------->
                <div class="form-group mt-5 d-flex justify-content-center">

                    <input type="submit" value="Save" class="btn btn-primary ps-5 pe-5 me-3 " />

                   @*  <input type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                    asp-action="Delete" asp-route-id="@Model.Id" value="Delete" class="btn btn-danger"> *@
 
                    <button type="button" class="btn btn-danger ps-5 pe-5 me-3" data-bs-toggle="modal" data-bs-target="#DeleteModal">
                        Delete <i class="fa fa-trash-alt text-white"></i>
                    </button>

                   @*  <a class="btn btn-danger ps-5 pe-5 me-3" data-bs-toggle="modal" data-bs-target="#DeleteModal">
                        Delete <i class="fa fa-trash-alt text-white"></i>
                    </a> *@

                    <a asp-action="Index" class="btn btn-outline-primary btn btn-outline-primary ps-4 pe-4 me-3">Back to List</a>
                    @* @Html.ActionLink("Save", "Edit", "News", new { Id = Model.Id }, new { @Class = "btn btn-info" }) *@
                </div>
            </form>
        </div>
        <!------------------------------------------------------------------------------->
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/inputfileimage.js"></script>
    <script src="~/js/stateswitch.js"></script>
}

